#!/bin/bash

set -euo pipefail

ROOT=$(pwd)

function cleanup {
	rm $ROOT/bkl
}

trap cleanup EXIT

go build ./cmd/bkl
export PATH=$ROOT:/opt/homebrew/share/git-core/contrib/diff-highlight:$PATH

for TEST in tests/*; do
	echo TEST $TEST
	cd $TEST

	colordiff -ud expected <(source cmd) | diff-highlight

	cd ~-
	echo "	PASS"
done
