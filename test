#!/bin/bash

set -eo pipefail

ROOT=$(pwd)
GOCMD=${GOCMD:=go}
BINS="bkl bkld bkli bklr"

function cleanup {
	for BIN in $BINS; do
		rm $ROOT/$BIN
	done
}

trap cleanup EXIT

for BIN in $BINS; do
	$GOCMD build ./cmd/$BIN
done

export PATH=$ROOT:$PATH

FOUND=n

for TEST in tests/*; do
	if [[ "$1" != "" && "tests/$1" != "$TEST" ]]; then
		continue
	fi

	FOUND=y

	echo TEST $TEST
	cd $TEST

	source cmd >/dev/null 2>&1

	diff -ud expected <(source cmd)

	cd ~-
	echo "	PASS"
done

if [[ "$1" != "" && $FOUND == n ]]; then
	echo "No test matching '$1' found"
	exit 1
fi
